<%- include('layout', { body: `
  <style>
    /* Container for the form */
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f7fafc; /* Light gray-blue background */
    }

    /* Wrapper for the form */
    .form-wrapper {
        background-color: #ffffff; /* White background */
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Shadow effect */
        padding: 24px;
        width: 400px; /* Adjust the width as needed */
    }

    /* Input fields */
    .input-field {
        border: 1px solid #cbd5e0; /* Light gray border */
        border-radius: 4px;
        margin-bottom: 16px;
        padding: 12px;
        width: 100%;
        transition: border-color 0.3s ease;
    }

    /* Input fields focus */
    .input-field:focus {
        outline: none;
        border-color: #4a90e2; /* Blue border when focused */
    }

    /* Login button */
    .button {
        background-color: #4a90e2; /* Blue button */
        border: none;
        border-radius: 4px;
        color: #ffffff; /* White text */
        cursor: pointer;
        font-size: 16px;
        padding: 12px;
        width: 100%;
        transition: background-color 0.3s ease;
    }

    /* Login button hover */
    .button:hover {
        background-color: #007bff; /* Darker blue on hover */
    }
  </style>

  <div class="form-container">
    <div class="form-wrapper">
        <form method="POST" action="/user/login">
            <input class="input-field" placeholder="Email address" type="email" name="email" id="email"/>
            <input class="input-field" placeholder="Password" type="password" name="password" id="password"/>
            <button type="submit" class="button">Login</button>
        </form>
    </div>
  </div>
` }) %>

